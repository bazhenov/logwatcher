<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" xmlns="http://www.w3.org/1999/xhtml"
					version="2.1"
					xmlns:c="http://java.sun.com/jsp/jstl/core"
					xmlns:l="http://bazhenov.org/logging"
					xmlns:f="http://java.sun.com/jsp/jstl/functions"
					xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
					xmlns:lt="urn:jsptagdir:/WEB-INF/tags" xmlns:s="http://www.springframework.org/tags">

	<jsp:directive.page contentType="text/html"/>
	<jsp:useBean id="p" scope="request" type="com.farpost.logwatcher.web.page.FeedPage"/>

	<html>
	<head>
		<title>LogWatcher: <c:out value="${p.applicationId}"/> feed</title>

		<s:url value='/css/aggregated-feed.css' var="cssUrl"/>
		<link rel="stylesheet" href="${cssUrl}"/>

		<s:url value='/css/popup.css' var="cssUrl"/>
		<link rel="stylesheet" href="${cssUrl}"/>

		<script type="text/javascript" src="/js/calendar.js">/**/</script>
		<script type="text/javascript" src="/js/jquery.flot.min.js">/**/</script>
		<script type="text/javascript" src="/js/jquery.flot.pie.min.js">/**/</script>
		<script type="text/javascript" src="/js/graph.js">/**/</script>

		<script type="text/javascript">
			var severityLevel = '${p.severity}';
			var entrySortOrder = '${p.sortOrder}';
		</script>

		<s:url value="/rss/{applicationId}" var="rssUrl">
			<s:param name="applicationId" value="${p.applicationId}"/>
			<s:param name="severity" value="${p.severity}"/>
		</s:url>
		<link rel="alternate" type="application/rss+xml" title="LogWatcher RSS"
					href="${rssUrl}"/>
	</head>

	<body>
	<h2>
		<span id="applicationId"><c:out value="${p.applicationId}"/></span>
		<span class="additionalInfo">
			on <span id="date"><fmt:formatDate pattern="dd MMMM, yyyy" value="${p.date}"/></span>
		</span>
	</h2>
	<lt:pie-chart data="${p.dataForPieChart}"/>
	<lt:severity-selector severity="${p.severity}"/>

	<lt:popup id="applicationSelector">
		<c:set value="${p.applications}" var="applications"/>
		<c:choose>
			<c:when test="${f:length(applications) gt 0}">
				<c:forEach items="${applications}" var="application">
					<a class="applicationLink" href="${application.url}"><c:out value="${application.id}"/></a>
				</c:forEach>
			</c:when>
			<c:otherwise>
				<div class="notification">
					No applications found
				</div>
			</c:otherwise>
		</c:choose>

		<div style="clear: both;">&amp;nbsp;</div>

		<div class="relatedLinks"><a href="/dashboard">Return to dashboard</a></div>
	</lt:popup>


	<c:url value="/feed/${p.applicationId}" var="baseUrl"/>
	<fmt:formatDate pattern="yyyy" var="year" value="${p.date}"/>
	<fmt:formatDate pattern="M" var="month" value="${p.date}"/>
	<script type="text/javascript">
		var baseUrl = "${baseUrl}";
		var baseDate = new Date("${year}", ${month}-1, 1);
		var urlCallback = function(date) {
			return baseUrl + '?date=' + date.getFullYear() + '-' + (date.getMonth() + 1) + '-' + date.getDate();
		};
		$("a.prevMonthLink").live("click", function() {
			baseDate.setMonth(baseDate.getMonth() - 1);
			var newContent = buildCal(baseDate, urlCallback);
			$("#dateSelector .innerBlock").html(newContent);
		});
		$("a.nextMonthLink").live("click", function() {
			baseDate.setMonth(baseDate.getMonth() + 1);
			var newContent = buildCal(baseDate, urlCallback);
			$("#dateSelector .innerBlock").html(newContent);
		})
	</script>
	<lt:popup id="dateSelector">
		<script type="text/javascript">
			document.write(buildCal(baseDate, urlCallback));
		</script>
	</lt:popup>

	<c:choose>
		<c:when test="${f:length(p.entries) > 0}">
			<div class="entries">
				<c:forEach var="entry" items="${p.entries}">
					<lt:aggregated-entry entry="${entry}" currentApplicationId="${p.applicationId}"/>
				</c:forEach>
			</div>

			<div id="footer">
				${l:pluralize(f:length(p.entries), "entry entries entries")},
				${l:pluralize(p.entriesCount, "message messages messages")}
			</div>
		</c:when>
		<c:otherwise>
			<div id="notificationPanel">
				<p>Try to change severity settings</p>
				<span>&amp;empty;</span>
				<br/>No results found.
			</div>

		</c:otherwise>
	</c:choose>

	</body>
	</html>
</jsp:root>
