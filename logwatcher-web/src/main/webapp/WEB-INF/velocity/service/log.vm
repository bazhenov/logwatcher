#* @vtlvariable name="p" type="com.farpost.logwatcher.web.controller.BackController.DetailsLogPage" *#
#if($p.entries.isEmpty())
No result found
#else
<ul class="nav nav-tabs">
	<li class="active"><a href="#table-log" data-toggle="tab">Table</a></li>
	<li><a href="#plain-log" data-toggle="tab">Plain log</a></li>
</ul>
<div class="tab-content">
	<div class="tab-pane active" id="table-log">
		<table class="table table-striped table-condensed">
			<thead>
			<tr>
				<th>Date</th>
				<th>Category</th>
				<th>Severity</th>
				<th>Message</th>
			</tr>
			</thead>
			<tbody>
				#foreach($e in $p.entries)
				<tr data-toggle="modal" data-target="#entry$foreach.index">
					<td>$date.format("dd MMM, HH:mm:ss", $e.date)</td>
					<td>$e.category</td>
					<td>$e.severity</td>
					<td>$e.message</td>
				</tr>
				<div id="entry$foreach.index" role="dialog" class="modal hide fade wideModel" data-keyboard="true">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h3>$e.message</h3>
					</div>
					<div class="modal-body">
						<p>$date.format("dd MMM, HH:mm:ss", $e.date) &mdash; $e.message</p>
						#if($e.cause)
							<p class="cause">$f.formatCause($e.cause)</p>
						#end
					</div>
					<div class="modal-footer">
						<button data-dismiss="modal" class="btn">Close</button>
					</div>
				</div>
				#end
			</tbody>
		</table>
	</div>
	<div class="tab-pane log" id="plain-log">
		#foreach($e in $p.entries)
			#logEntry($e)
		#end
	</div>
</div>

#end