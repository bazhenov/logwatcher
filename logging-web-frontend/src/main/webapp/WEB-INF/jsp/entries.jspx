<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" xmlns="http://www.w3.org/1999/xhtml"
					version="2.1"
					xmlns:c="http://java.sun.com/jsp/jstl/core"
					xmlns:l="http://bazhenov.org/logging"
					xmlns:f="http://java.sun.com/jsp/jstl/functions"
					xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
					xmlns:lt="urn:jsptagdir:/WEB-INF/tags">

	<jsp:directive.page contentType="text/html"/>
	<jsp:directive.page pageEncoding="UTF-8"/>

	<jsp:useBean id="date" scope="request" type="java.util.Date"/>
	<jsp:useBean id="applicationId" scope="request" type="java.lang.String"/>
	<jsp:useBean id="checksum" scope="request" type="java.lang.String"/>
	
	<html>
	<head>
		<title>LogWatcher: detailed information for entry</title>
		<c:url value='/css/detailed-entry.css' var="cssUrl"/>
		<link rel="stylesheet" href="${cssUrl}"/>
	</head>

	<body>
	<h2>detailed information â€” <code>${l:trim(checksum, 8, "...")}</code></h2>

	<c:url var="backUrl" value="/feed/${applicationId}">
		<c:param name="date"><fmt:formatDate value="${date}" pattern="yyyy-MM-dd"/></c:param>
	</c:url>

	<p>
	<a href="${backUrl}">&amp;larr; Back</a> to <c:out value="${applicationId}"/> &amp;mdash;
	<fmt:formatDate value="${date}" pattern="MMMM dd, 2010"/>
	</p>

	<c:forEach items="${entries}" var="entry">
		<lt:entry entry="${entry}"/>
	</c:forEach>
	</body>
	</html>
</jsp:root>
