<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:property="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="storage" class="org.bazhenov.logging.storage.InMemoryLogStorage"/>

	<bean class="org.bazhenov.logging.web.Bootstrap"
	      init-method="load"
	      lazy-init="false"
	      property:storage-ref="storage"/>

	<bean class="org.bazhenov.logging.transport.UdpTransport" lazy-init="false" init-method="start"
	      destroy-method="stop">
		<constructor-arg value="6578"/>
		<constructor-arg>
			<bean class="org.bazhenov.logging.transport.WriteToStorageTransportListener">
				<constructor-arg ref="storage"/>
				<constructor-arg>
					<bean class="com.farpost.logging.marshalling.JDomMarshaller"/>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<property name="bufferSize" value="120000"/>
	</bean>
</beans>